<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/gituser_detail_layout_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/cardPadding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gitUserNameTextView"
                    style="@style/cardText.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/gitUserRepoTextView"
                    style="@style/cardText.Score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardPadding"
                    android:layout_marginRight="@dimen/cardPadding"
                    android:maxLines="2"
                    android:text="@string/gitUserSampleRepoLink" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardPadding">

                    <TextView
                        android:id="@+id/openRepoButton"
                        style="@style/textButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/basePadding"
                        android:text="@string/gitUserRepoButton"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        style="@style/textButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gitUserSampleAction"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/gitUserAvatarImageView"
                android:layout_width="@dimen/gitUserDetailImageDimension"
                android:layout_height="@dimen/gitUserDetailImageDimension"
                android:layout_gravity="end"
                android:elevation="1dp"
                android:src="@color/colorTextHint"
                android:visibility="gone"
                tools:targetApi="lollipop" />

            <ProgressBar
                android:id="@+id/loadingGitUserImageProgressBar"
                android:layout_width="@dimen/gitUserDetailImageDimension"
                android:layout_height="@dimen/gitUserDetailImageDimension"
                android:padding="@dimen/cardPadding" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
